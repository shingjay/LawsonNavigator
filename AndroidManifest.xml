	        android:screenOrientation="portrait"
	        android:configChanges="keyboardHidden|orientation" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="Options"
	        android:screenOrientation="portrait"
